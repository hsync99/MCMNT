<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCMNT.MainPage"
                xmlns:itemsvm ="clr-namespace:MCMNT.ViewModels">
    <ContentPage.BindingContext>
        <itemsvm:ViewModel/>
    </ContentPage.BindingContext>
    <Grid  Padding="20" ColumnDefinitions="2" RowDefinitions="1">
        <Grid Grid.Column="1" Grid.Row="1" ColumnDefinitions="3">
            <Frame Padding="0" Grid.Column="1" Grid.Row="1" >
                <Label Text="HELLO" FontSize="50" HorizontalTextAlignment="Center" TextColor="Black"/>
            </Frame>

        <Frame Grid.Column="1" Grid.Row="2" Padding="0"  BackgroundColor="Black" CornerRadius="20" >
            <Button BackgroundColor="Black" TextColor="White" Padding="0" Text=" ADD " Command="{Binding NavToCreateCommand}"/>
        </Frame>


            <Frame Grid.Column="1" Grid.Row="3" Padding="0"  BackgroundColor="Black" CornerRadius="20" >
            <Button TextColor="White" BackgroundColor="Black" Text="SHOW " Command="{Binding NavToListCommand}"/>
        </Frame>
            <Frame Grid.ColumnSpan="2" Grid.Row="8" Padding="0"  BackgroundColor="Black" CornerRadius="20" >
               
            </Frame>

        </Grid>
    </Grid>
</ContentPage>
